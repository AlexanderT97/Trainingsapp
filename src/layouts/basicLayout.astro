---
import Image from "astro/components/Image.astro";
import { ClientRouter } from "astro:transitions";

const { title, ImageSrc, ImageAlt, backLink } = Astro.props;
const themeColor = "#a4d3f4";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="favicon/site.webmanifest" />
    <title>{title}</title>
    <meta name="theme-color" content={themeColor} />
    <ClientRouter />
  </head>
  <body>
    {
      backLink && (
        <a href={backLink} class="back-button">
          <img src="/back-icon.svg" alt="ZurÃ¼ck" width="30" height="30" />
        </a>
      )
    }
    <Image src={ImageSrc} alt={ImageAlt} width="100" height="100" />
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --white: #ffffff;
    --blue: #a4d3f4;
    --dark: #242530;
    --grey: #647287;
    --yellow: #d8e488;
  }

  @font-face {
    font-family: "Shrikhand";
    src: url(/fonts/Shrikhand-Regular.ttf) format("truetype");
  }

  body {
    background-color: var(--blue);
    font-family: "Shrikhand", cursive;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 0.5rem;
    
  }

  h1 {
    color: var(--dark);
    -webkit-text-stroke: 5px var(--white);
    font-size: 2.5rem;
    paint-order: stroke fill;
    margin: 2rem 0;
    letter-spacing: 2px;
    text-align: center;
  }

  a {
    color: var(--white);
    -webkit-text-stroke: 5px var(--dark);
    font-size: 2.5rem;
    text-decoration: none;
    paint-order: stroke fill;
    margin: 1rem 0;
    letter-spacing: 2px;
    text-align: center;
  }

  #weight {
    color: var(--yellow);
    margin-top: 2rem;
  }

  .back-button {
    position: absolute;
    top: 20px;
    left: 20px;
  }
</style>
